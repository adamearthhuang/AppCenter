page {
  background-color: #AC4036;
}

.placeholder {
  height: 20px;
}

.board {
  background-color: #fff;
  margin-left: 15px;
  margin-right: 15px;
  border-radius: 5px;
}

.board .top {
  text-align: center;
  padding: 30px 15px 30px 15px;
  border-bottom: 1px #F1F1F1 dashed;
}

.board .top .title {
  font-size: 0.8rem;
  color: #999;
  margin-bottom: 10px;
}

.board .top .content {
  font-size: 1.5rem;
}

.board .bottom {
  padding: 30px 15px 15px 15px;
}

.board .bottom .tip {
  font-size: 0.8rem;
  color: #999;
  margin-bottom: 20px;
}

.board .bottom image {
  width: 100%;
}

