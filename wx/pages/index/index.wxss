@import '../../libs/weui.wxss';

page {
  background-color: #f8f8f8;
  font-size: 0.9rem;
}

.bar-login {
  height: 40px;
  padding: 10px 10px 10px 10px;
}

.bar-login button {
  font-size: 15px;
  background: #fff;
  color: #868686;
}

.bar-login .hover {
  background: #FAFAFB;
}

.bar-user {
  height: 50px;
  padding: 10px 10px 10px 10px;
  display: flex;
  justify-content: space-between;
}

.bar-user .between {
  display: flex;
  align-items: center;
}

.bar-user .avatar {
  width: 44px;
  height: 44px;
  border-radius: 50%;  
}

.bar-user .info {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.bar-user .nickname {
  font-size: 1rem;
}

.bar-user .tips {
  font-size: 0.8rem;
  color: #868686;
}

.bar-user .loginDays {
  font-size: 0.8rem;
  color: #868686;
}

.title {
  padding: 10px 15px 10px 15px;
  color: #868686;
}

.grids {
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #d9d9d9;
  border-left: 1rpx solid #d9d9d9;
}

.grids .grid {
  width: 33.333333%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #FFF;
  box-sizing: border-box;
  border-right: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9
}

.grids .grid image {
  width: 27px;
  height: 27px;
}

.grids .grid text {
  margin: 10px 0 0 0;
}

.footer {
  padding: 40px 0px 10px 0px;
}